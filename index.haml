:ruby
  @image_folder = 'img/'
  @icons = [
    { :id    => 'facebook',
      :image => 'facebook.png',
      :name  => 'Facebook', 
      :url   => 'https://www.facebook.com/' },
    { :id    => 'twitter',
      :image => 'twitter.png',
      :name  => 'Twitter',
      :url   => 'https://twitter.com/' },
    { :id    => 'dribbble',
      :image => 'dribbble.png',
      :name  => 'Dribbble',
      :url   => 'http://dribbble.com/' },
    { :id    => 'reddit',
      :image => 'reddit.png',
      :name  => 'Reddit',
      :url   => 'http://www.reddit.com/' },
    { :id    => 'youtube',
      :image => 'youtube.png',
      :name  => 'YouTube',
      :url   => 'http://www.youtube.com/' },
    { :id    => 'gmail',
      :image => 'gmail.png',
      :name  => 'Gmail',
      :url   => 'https://mail.google.com/mail/' }
  ];

!!! 5
%html{ :lang => "en-US" }
  %head
    /[if IE]
    %meta{ :charset => "utf-8" }
    %meta{ :name => "viewport", :content => "width=device-width" }
    %title start

    %link{ :rel => "stylesheet", :href => "css/main.css" }
    /[if lt IE 9]
      %script{ :src => "js/sizzle.min.js" }
      %script{ :src => "js/selectivizr-min.js" }
      %script{ :src => "js/respond.min.js" }
  %body
    .wrapper
      .grid>
        - @icons.each do |icon|
          .icon-wrapper.grid-item.small-2up.medium-3up.large-6up>
            %a.icon{ :href => icon[:url] }
              %img{ :id => icon[:id], 
                :src => @image_folder + icon[:image], 
                :alt => icon[:name] }
